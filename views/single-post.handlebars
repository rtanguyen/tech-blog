<div class="d-flex justify-content-center">
<div class="card justify-content-center">
    <div class="card-header d-flex justify-content-between" id="post-title">
        <div>{{post.title}}</div>
        <div>Posted by {{post.user.username}} on {{format_date post.created_at}}</div>
        </div>
<div class="card-text" id="post-content">{{post.content}}</div>
</div>
</div>

{{> comments post.comments}}

{{#if loggedIn}}
<div class="d-flex justify-content-center">
<form class="comment-form">
    <div>
        <textarea class="form-control" name="comment-body" rows="3"></textarea>
    </div>
    <div class="d-flex justify-content-start py-3">
        <button type="submit" class="btn btn-lg btn-outline-secondary" id="add-comment-btn">add comment</button>
    </div>
</form>
</div>

{{/if}}


{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}