<ul class="list-unstyled">
    {{#each posts as |post|}}
  <li class="d-flex justify-content-center">
    <div class="card justify-content-center">
      <div class="card-header d-flex justify-content-between" id="post-title">
        <a href="/post/{{id}}">{{title}}</a>
        <div>Posted by {{user.username}} on {{format_date created_at}}</div>
      </div>
      </div>
  </li>
  {{/each}}
</ul>